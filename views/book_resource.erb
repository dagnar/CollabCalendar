<script>
	$(document).ready(function(){
		var valArr = new Array();

		$("#button").click(function() {
			valArr[0] = $("#ddl").val();
			valArr[1] = $("#nameEvent").val();
			valArr[2] = $("#startDate").val();
			valArr[3] = $("#startTime").val();
			valArr[4] = $("#endTime").val();

			$.post("",
						{
							crId: valArr[0],
							name: valArr[1],
							startDate: valArr[2],
							startTime: valArr[3],
							endTime: valArr[4]	
						},
						function(data, status){
							 alert("Data: " + data + "\nStatus: " + status);
						}
				);
		});		
	});
</script>

<form action="/common-resource/book">
