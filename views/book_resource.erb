			<!-- 	<input type="checkbox" name="resource" value="<%= bla.id %>"> <%= bla.name %> <	br> 	-->
			<% end %>
		</select>
	</p>
	<p>Name of Event: <input type="text" id="nameEvent"/></p>
	<p>Date: dd-mm-yyyy <input type="text" id="startDate" /></p>
	<p>Start Time: hh:mm<input type="text" id="startTime" /></p>
	<p>End Time: hh:mm<input type="text" id="endTime" /></p>
	<input id="button" type="submit" value="Booya">
</form>
