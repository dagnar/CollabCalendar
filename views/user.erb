<script>
	$(document).ready(function(){
		var valArr = new Array();

		$("#button").click(function() {
			valArr[0] = $("#first_name").val();
			valArr[1] = $("#last_name").val();
			valArr[2] = $("#email").val();
			valArr[3] = $("#password").val();

			$.post("",
						{
							first_name: valArr[0],
							last_name: valArr[1],
							email: valArr[2],
							password: valArr[3]							
						},
						function(data, status){
							 alert("Data: " + data + "\nStatus: " + status);
						}
				);
		});		
	});
</script>

<form action="/user/new" method="post">
  <p>First name: <input type="text" name="first_name" size="20"/></p>
  <p>Last name: <input type="text" name="last_name" size="20"/></p>
	<p>Email: <input type="text" name="email" size="20"/></p>  
	<p>Password: <input type="text" name="password" size="20"/></p> 
  <input id='button' type="submit" value="Say hi!">
</form>
